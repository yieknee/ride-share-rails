<div>
  <h1>List of Drivers</h1>
  <button class='tablink'><%= link_to 'Create A New Driver', new_driver_path %></button>
  <table>
    <tr>
      <th>ID</th>
      <th>NAME</th>
      <th>VIN</th>
      <th>STATUS</th>
    </tr>
    <% @drivers.each do |driver| %>
    <tr>
      <th><%= driver.id %><th>
      <th><%= link_to "#{driver.name}", driver_path(driver.id) %></th>
      <th><%= driver.vin %><th>
      <th><%= driver.available ? "Available" : "Unavailable"%><th>
    </tr>
    <% end %>
  </table>
</div>