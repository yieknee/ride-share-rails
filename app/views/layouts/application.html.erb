<!DOCTYPE html>
<html>
  <head>
    <title>RideShareRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <h1>Rails Ride Share</h1>

    <div class="tablink btn-group">
      <%= link_to 'Home', root_path %>
    </div>

    <div class="btn-group ">
      <button type="button" class="tablink dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        Drivers
      </button>
        <div class="dropdown-menu">
        <li><%= link_to "View", drivers_path %> </li>
        <li><%= link_to "New", new_driver_path %> </li>
        </div>
    </div>
     <div class="btn-group ">
      <button type="button" class="tablink dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        Passengers
      </button>
        <div class="dropdown-menu">
        <li><%= link_to "View", passengers_path %> </li>
        <li><%= link_to "New", new_passenger_path %> </li>
        </div>
    </div>
    </header>
    <% flash.each do |type, msg| %>
    <div>
    <%= msg %>
    </div>
    <% end %>
    <%= yield %>
  </body>
</html>
